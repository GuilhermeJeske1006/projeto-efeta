#!/bin/bash
set -e

# Alias composer2 para o composer real
alias composer2="/usr/bin/composer"

APP_ENV=$(grep APP_ENV .env | cut -d '=' -f 2);

echo "Running composer install from ${APPLICATION_ROOT}";
composer2 install --no-ansi --no-progress --no-interaction --no-dev

echo "Running migrations for ${APP_ENV} environment";
php artisan migrate --force

echo "Running NPM for ${APP_ENV} environment";
npm install --no-audit --no-optional --no-progress
npm run build
